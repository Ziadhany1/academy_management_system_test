<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List View -->
    <record id="academy_course_list" model="ir.ui.view">
        <field name="name">academy.course.list</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'published'"
                  decoration-danger="is_full">
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="instructor_id"/>
                <field name="state"/>
                <field name="enrolled_count"/>
                <field name="available_seats"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="academy_course_form" model="ir.ui.view">
        <field name="name">academy.course.form</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <form>
                <header>

                    <!-- Workflow buttons -->
                    <button name="action_publish"
                            type="object"
                            string="Publish"
                            groups="academy_lab.academy_group_manager"
                            invisible="state != 'draft'"/>

                    <button name="action_start"
                            type="object"
                            string="Start"
                            groups="academy_lab.academy_group_manager"
                            invisible="state != 'published'"/>

                    <button name="action_complete"
                            type="object"
                            string="Complete"
                            groups="academy_lab.academy_group_manager"
                            invisible="state != 'in_progress'"/>

                    <button name="action_cancel"
                            type="object"
                            string="Cancel"
                            groups="academy_lab.academy_group_manager"
                            invisible="state in ('done','cancelled')"/>

                    <!-- Commercial Integration -->
                    <button string="Generate Product"
                            type="object"
                            name="action_generate_product"
                            class="btn-primary"
                            invisible="product_id"/>

                    <button name="action_view_sales"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-shopping-cart"
                            invisible="not product_id">
                        <field string="Sales" name="product_id"/>
                    </button>

                    <field name="state" widget="statusbar"/>
                </header>

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="category_id"/>
                        <field name="instructor_id"/>
                        <field name="duration_hours"/>
                        <field name="max_students"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="product_id"/>
                    </group>

                    <group>
                        <field name="enrolled_count" readonly="1"/>
                        <field name="available_seats" readonly="1"/>
                        <field name="is_full" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="Enrollments">
                            <field name="enrollment_ids"/>
                        </page>
                    </notebook>
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

</odoo>
