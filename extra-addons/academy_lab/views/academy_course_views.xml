<odoo>
    <data>
        <menuitem id="academy_root_menu" name="Academy" sequence="10"/>

        <menuitem id="academy_courses_menu" name="Courses" parent="academy_root_menu" sequence="10"/>

        <menuitem id="academy_enrollments_menu" name="Enrollments" parent="academy_root_menu" sequence="20"/>

        <menuitem id="academy_config_menu" name="Configuration" parent="academy_root_menu" sequence="30"
                  groups="academy_lab.academy_group_manager"/>

        <menuitem id="menu_academy_course" 
                  name="Courses" 
                  parent="academy_courses_menu"
                  action="action_academy_course" 
                  sequence="10"/>

        <menuitem id="menu_academy_course_category" 
                  name="Categories" 
                  parent="academy_courses_menu"
                  action="action_academy_course_category" 
                  sequence="20"/>

        <record id="action_academy_course" model="ir.actions.act_window">
            <field name="name">Courses</field>
            <field name="res_model">academy.course</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new course
                </p>
            </field>
        </record>

        <record id="academy_course_view_search" model="ir.ui.view">
            <field name="name">academy.course.search</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <search string="Courses">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="instructor_id"/>
                    <field name="category_id"/>
                    <filter string="Draft" name="state_draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Published" name="state_published" domain="[('state', '=', 'published')]"/>
                    <filter string="In Progress" name="state_in_progress" domain="[('state', '=', 'in_progress')]"/>
                    <separator/>
                    <filter string="Is Full" name="is_full" domain="[('is_full', '=', True)]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_instructor" string="Instructor" context="{'group_by': 'instructor_id'}"/>
                        <filter name="group_by_category" string="Category" context="{'group_by': 'category_id'}"/>
                        <filter name="group_by_state" string="State" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="academy_course_view_list" model="ir.ui.view">
            <field name="name">academy.course.list</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <list decoration-success="state == 'published' and not is_full" 
                      decoration-warning="state == 'in_progress'"
                      decoration-danger="is_full">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="instructor_id"/>
                    <field name="category_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="enrolled_count"/>
                    <field name="available_seats" optional="show"/>
                    <field name="is_full" invisible="1"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="academy_course_view_form" model="ir.ui.view">
            <field name="name">academy.course.form</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <form string="Course">
                    <header>
                        <button name="action_publish" string="Publish" type="object" states="draft" class="oe_highlight"/>
                        <button name="action_start" string="Start Course" type="object" states="published" class="oe_highlight"/>
                        <button name="action_complete" string="Complete" type="object" states="in_progress" class="oe_highlight"/>
                        <button name="action_cancel" string="Cancel" type="object" states="draft,published,in_progress"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,published,in_progress,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(academy_lab.action_academy_enrollment_by_course)d"
                                    type="action"
                                    class="oe_stat_button"
                                    icon="fa-users">
                                <field name="enrolled_count" widget="statinfo" string="Enrolled Students"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="category_id"/>
                                <field name="instructor_id"/>
                            </group>
                            <group>
                                <field name="max_students"/>
                                <field name="available_seats"/>
                                <field name="is_full" invisible="1"/>
                                <field name="duration_hours"/>
                            </group>
                        </group>
                        <group string="Dates">
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Enrollments">
                                <field name="enrollment_ids" context="{'default_course_id': id}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record id="action_academy_enrollment_by_course" model="ir.actions.act_window">
            <field name="name">Course Enrollments</field>
            <field name="res_model">academy.enrollment</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('course_id', '=', active_id), ('state', '=', 'confirmed')]</field>
        </record>

    </data>
</odoo>