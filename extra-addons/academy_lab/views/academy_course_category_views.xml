<odoo>
    <data>
        <record id="action_academy_course_category" model="ir.actions.act_window">
            <field name="name">Course Categories</field>
            <field name="res_model">academy.course.category</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="academy_course_category_view_list" model="ir.ui.view">
            <field name="name">academy.course.category.list</field>
            <field name="model">academy.course.category</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="course_count"/>
                </list>
            </field>
        </record>

        <record id="academy_course_category_view_form" model="ir.ui.view">
            <field name="name">academy.course.category.form</field>
            <field name="model">academy.course.category</field>
            <field name="arch" type="xml">
                <form string="Course Category">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Courses in Category">
                                <field name="course_ids" context="{'default_category_id': id}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem id="menu_academy_course_category_config" 
                  name="Course Categories" 
                  parent="academy_config_menu" 
                  action="action_academy_course_category" 
                  sequence="10"/>

    </data>
</odoo>