<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="academy_category_list" model="ir.ui.view">
        <field name="name">academy.course.category.list</field>
        <field name="model">academy.course.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="course_count"/>
            </list>
        </field>
    </record>

    <record id="academy_category_form" model="ir.ui.view">
        <field name="name">academy.course.category.form</field>
        <field name="model">academy.course.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
