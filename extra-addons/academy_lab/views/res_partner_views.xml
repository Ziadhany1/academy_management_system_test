<odoo>
    <data>
        <record id="view_partner_form_inherit_academy_lab" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.academy.lab</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="%(academy_lab.action_partner_enrollments)d"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-graduation-cap"
                            attrs="{'invisible': [('is_student', '=', False)]}">
                        <field name="total_courses_enrolled" widget="statinfo" string="Courses Enrolled"/>
                    </button>
                    <button name="%(academy_lab.action_partner_courses_teaching)d"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-chalkboard-teacher"
                            attrs="{'invisible': [('is_instructor', '=', False)]}">
                        <field name="total_courses_teaching" widget="statinfo" string="Courses Teaching"/>
                    </button>
                </xpath>
                
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="is_student"/>
                    <field name="is_instructor"/>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page string="Academy" name="academy" 
                          attrs="{'invisible': ['&amp;', ('is_student', '=', False), ('is_instructor', '=', False)]}">
                        <group string="Student Information" attrs="{'invisible': [('is_student', '=', False)]}">
                            <field name="student_enrollment_ids" nolabel="1">
                                <list>
                                    <field name="course_id"/>
                                    <field name="state"/>
                                    <field name="grade"/>
                                    <field name="passed"/>
                                </list>
                            </field>
                        </group>
                        <group string="Instructor Information" attrs="{'invisible': [('is_instructor', '=', False)]}">
                            <field name="instructor_course_ids" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="state"/>
                                    <field name="enrolled_count"/>
                                </list>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        
        <record id="action_partner_enrollments" model="ir.actions.act_window">
            <field name="name">Courses Enrolled</field>
            <field name="res_model">academy.enrollment</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('student_id', '=', active_id)]</field>
        </record>

        <record id="action_partner_courses_teaching" model="ir.actions.act_window">
            <field name="name">Courses Teaching</field>
            <field name="res_model">academy.course</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('instructor_id', '=', active_id)]</field>
        </record>
    </data>
</odoo>