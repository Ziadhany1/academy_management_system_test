<odoo>
    <record id="view_academy_product_wizard_form" model="ir.ui.view">
        <field name="name">academy.product.wizard.form</field>
        <field name="model">academy.product.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Product">
                <group>
                    <field name="name"/>
                    <field name="price"/>
                </group>
                <footer>
                    <button string="Create"
                            type="object"
                            name="action_create_product"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
